<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="1dp"
        card_view:cardBackgroundColor="@color/colorCard"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="1dp"
        card_view:contentPadding="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/nome_cliente"
                android:textSize="15sp"
                android:textStyle="bold"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_abertura"
                android:textSize="15sp"
                android:textStyle="bold"
                card_view:layout_constraintLeft_toRightOf="@+id/textView22"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintRight_toLeftOf="@+id/textView12"
                android:layout_marginRight="8dp"
                card_view:layout_constraintHorizontal_bias="0.55"
                android:layout_marginTop="4dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textNomeCliente" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contatoCard"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="4dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textNomeCliente"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textContato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_00_00000_0000"
                android:layout_marginLeft="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="0dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textView22"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textNomeCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:text="@string/none"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textDataAbertura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_00_00_0000"
                android:layout_marginTop="0dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textView5"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="@+id/textView5"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/problema_informado"
                android:textSize="15sp"
                android:textStyle="bold"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textDataAbertura" />

            <TextView
                android:id="@+id/textDescricao"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="1dp"
                android:text="@string/none"
                android:textAlignment="textStart"
                android:textStyle="italic"
                card_view:layout_constraintBottom_toTopOf="@+id/botaoAbrir"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView9"
                card_view:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textNumeroOs"
                android:layout_marginRight="16dp"
                card_view:layout_constraintRight_toRightOf="parent"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textStatusOs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="16dp"
                android:text="@string/none"
                android:textAlignment="textEnd"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="0dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textView12"
                card_view:layout_constraintLeft_toRightOf="@+id/textDataAbertura"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintHorizontal_bias="1.0"
                android:layout_marginBottom="0dp"
                card_view:layout_constraintBottom_toTopOf="@+id/textDescricao"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/numero_da_o_s"
                android:textSize="15sp"
                android:textStyle="bold"
                card_view:layout_constraintHorizontal_bias="1.0"
                card_view:layout_constraintLeft_toRightOf="@+id/textView4"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textNumeroOs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:text="@string/none"
                card_view:layout_constraintHorizontal_bias="1.0"
                card_view:layout_constraintLeft_toRightOf="@+id/textNomeCliente"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="0dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textView17"
                tools:ignore="RtlHardcoded" />

            <ImageButton
                android:id="@+id/botaoNovoAcomp"
                style="@style/DefaultButton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:contentDescription="@string/novo_acompanhamento"
                android:elevation="0dp"
                android:padding="8dp"
                android:src="@drawable/ic_action_add_circl_outline"
                android:tint="@android:color/holo_blue_dark"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.2"
                card_view:layout_constraintStart_toStartOf="parent"
                tools:ignore="RtlHardcoded" />

            <ImageButton
                android:id="@+id/botaoAbrir"
                style="@style/DefaultButton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"

                android:layout_marginBottom="4dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:contentDescription="@string/alterar_status_os"
                android:elevation="0dp"
                android:padding="8dp"
                android:src="@drawable/ic_action_open"
                android:tint="@android:color/holo_green_dark"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.75"
                card_view:layout_constraintStart_toStartOf="parent"
                tools:ignore="RtlHardcoded" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>